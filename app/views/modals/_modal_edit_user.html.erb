  $('.avatar_options').on("change", function(){
    var skin = $('.avatar_options option:selected').attr("value");

//    $('#avatar_img').animate({
//      opacity:.5
//    }, 500, "linear");

//    $('#avatar_img').attr('src', 'hair-black' + '-' + 'eyes-blue-green' + '-' + skin + '.png');
