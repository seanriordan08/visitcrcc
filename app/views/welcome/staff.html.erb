<%= render partial: "modals/all" %>

<div class="container staff_page">
  <div class="section">
    <% if @staff.present? %>
      <h3>Staff</h3>
      <ul class="collection">
        <% @staff.each do |staff| %>
          <li class="collection-item avatar large">
            <%= image_tag 'avatars-material-man-3.png', class: "circle responsive-img", style: "background-color: #78B5CA" %>
            <span class="title"><%= staff.role_description.titleize %></span>
            <p>
              <%= staff.first_name %> <%= staff.last_name %>
              <br>
              <%= staff.email %>
            </p>
            <a href="#!" class="secondary-content"><i class="material-icons">grade</i></a>
          </li>
        <% end %>
      </ul>
    <% else %>
      <br>
      <h4>Under Construction - Check Back Soon :D</h4>
    <% end %>

  </div>
</div>
