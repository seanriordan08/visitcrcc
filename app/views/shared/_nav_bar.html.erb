<% content_for(:body_attributes) do %>
  data-no-turbolink="true"
<% end %>

<ul id="nav_dropdown_info" class="dropdown-content">
  <li><a href="#modal_learn_more" class="modal-trigger" style="color: #353535">Mission</a></li>
  <li class="divider"></li>
  <li><%= link_to "Staff & Personnel", staff_welcome_index_path, style: "color: #353535"%></li>
</ul>
<ul id="nav_dropdown_get_involved" class="dropdown-content">
  <li><a href="#" style="color: #353535">Prayer</a></li>
  <li class="divider"></li>
  <li><a href="#" style="color: #353535">Attend Launch</a></li>
  <li class="divider"></li>
  <li><a href="#" style="color: #353535">Giving</a></li>
  <% if !user_signed_in? %>
    <li class="divider"></li>
    <li id="sign_up"><a href="#modal_sign_up" class="modal-trigger" style="color: #353535">Sign Up</a></li>
  <% end %>
</ul>
<div class="navbar-fixed">
  <nav class="crcc-white" role="navigation">
    <div class="nav-wrapper container">
      <%= link_to "CRCC", root_path, id: "logo-container", class: "brand-logo crcc-black-text", style: "font-family: 'Sansita One', cursive; color: #353535" %>
      <ul class="right hide-on-med-and-down">
        <li><a class="dropdown-button" href="#" style="color: #353535" data-activates="nav_dropdown_info">About<i class="material-icons right">arrow_drop_down</i></a></li>
        <li><a href="#" style="color: #353535">Sermons</a></li>
        <li><a href="#" style="color: #353535">Events</a></li>
